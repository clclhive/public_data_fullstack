package day04;

public class For09 {

  public static void main(String[] args) {
    /* 이중 for문
     * *****
     * *****
     * *****
     * *****
     * *****
     */
    
    for(int i = 1 ; i <= 5 ; i ++) {
      for(int j = 1 ; j <= 5 ; j ++) {
        System.out.print("*");
      }
      System.out.println();
    }
    
    /* *
     * (2,3,4)개
     * *****
     */
    
    for(int i = 1 ; i <= 5 ; i++) {
      for(int j = 1 ; j <= i ; j ++) {
        System.out.print("*");
      }
      System.out.println();
    }
    
    for(int i = 1 ; i >= 1 ; i ++) {
      for(int j = 5 ; j = i ; j --) {
        System.out.print("*");
      }
      System.out.println();
    }

  }

}
