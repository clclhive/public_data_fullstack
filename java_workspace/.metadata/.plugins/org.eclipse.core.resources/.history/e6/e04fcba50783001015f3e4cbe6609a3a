package day02;

public class Switch01 {

  public static void main(String[] args) {
    //조건문
    //swtich(변수/식)
    //case 값1 : 실행문; break;
    //case 값2 : 실행문; break;
    //case 값3 : 실행문; break;
    //default: 실행문;
    //break; 구문 빠져나갈 때 사용
    
    int num = 6;
    //짝수인지 홀수인지 판별
    int mod = num % 2;
    System.out.println(mod); // 0 or 1
    
    switch(mod) {
      case 0 : System.out.println("짝수");break;
      case 1 : System.out.println("홀수");break;
      default : System.out.println("이상한 값");
      //case 0 -> System.out.println("짝수");
      //case 1 -> System.out.println("홀수");
      //default -> System.out.println("이상한 값"); ->이거 왜 안댐???????? -> 버전 문제
      
    }
    
    /* num1 변수에 1,2,3 중 하나라고 가정
     * num1에 따라 1이면 1칸전진, 2이면 2칸 전진, 3이면 3칸 전진 출력
     * 나머지는 이상한 값
     */
    
    System.out.println("---------------------------------");
    
    int num1 = (int) (Math.random() * 4) + 1;
    
    switch(num1) {
      case 1 : System.out.println("1칸 전진"); break;
      case 2: System.out.println("2칸 전진"); break;
      case 3 : System.out.println("3칸 전진"); break;
      default : System.out.println("잘못된 값");
    }
    
    //여러케이스 하나로 묶기
    switch(num1) {
      case 1: case 2: case 3:
        System.out.println(num1+"칸 전진"); break;
        
      default:
        System.out.println("이상한 값");
    }
    
    System.out.println("---------------------------------");
    
    //345 봄 678 여름 91011 가을 1212 겨울 잘못된 월입니다
    int month = (int) (Math.random()*12) +1;
 // 1월부터 12월까지의 숫자 중 하나를 임의로 생성합니다.
    int month = (int) (Math.random() * 12) + 1;

    System.out.println("현재 월: " + month + "월");

    switch (month) {
      case 3:
      case 4:
      case 5: // month가 3, 4, 5일 경우
        System.out.println("봄입니다. ");
        break;

      case 6:
      case 7:
      case 8: // month가 6, 7, 8일 경우
        System.out.println("여름입니다. ");
        break;

      case 9:
      case 10:
      case 11: // month가 9, 10, 11일 경우
        System.out.println("가을입니다. ");
        break;

      case 12:
      case 1:
      case 2: // month가 12, 1, 2일 경우
        System.out.println("겨울입니다. ");
        break;
        
      default:
        System.out.println("잘못된 월입니다.");
        break;
    }

  }
}
