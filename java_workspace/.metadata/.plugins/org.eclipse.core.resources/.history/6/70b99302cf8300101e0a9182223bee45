package day03;

import java.util.Scanner;

public class For07 {

  public static void main(String[] args) {
    /* 숫자를 입력받아 그 수가 소수인 지 아닌 지 출력
     * 
     * 숫자 입력 받기
     * 입력 받은 숫자가 1이하 일때와 초과 일 때 구분
     * 입력한 숫자 미만의 숫자들을 2부터 대입해가며 구분 
     * 
     */
    
    Scanner sc = new Scanner(System.in);
    System.out.println("정수 입력 : ");
    int num = sc.nextInt();
    
    boolean np = true; //소수가 아닐 경우 true np = not prime
    int i = 1;
    
    if (num <= 1) {
      np = true;
    }   else {
      for(i=2 ; i < num && !np; i++) {
        if(num % i == 0) {
          np = true;
        }
      }
    }
    
    if(!np) {
      System.out.println(num + "은 소수임");
    }   else {
      System.out.println(num + "은 소수 아님");
    }

  }

}
