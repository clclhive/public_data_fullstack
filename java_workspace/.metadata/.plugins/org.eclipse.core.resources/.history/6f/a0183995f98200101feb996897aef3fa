package day02;

public class Switch01 {

  public static void main(String[] args) {
    //조건문
    //swtich(변수/식)
    //case 값1 : 실행문; break;
    //case 값2 : 실행문; break;
    //case 값3 : 실행문; break;
    //default: 실행문;
    //break; 구문 빠져나갈 때 사용
    
    int num = 6;
    //짝수인지 홀수인지 판별
    int mod = num % 2;
    System.out.println(mod); // 0 or 1
    
    switch(mod) {
      case 0 : System.out.println("짝수");break;
      case 1 : System.out.println("홀수");break;
      default : System.out.println("이상한 값");
      //case 0 -> System.out.println("짝수");
      //case 1 -> System.out.println("홀수");
      //default -> System.out.println("이상한 값"); ->이거 왜 안댐????????
      
    }
    
    /* num1 변수에 1,2,3 중 하나라고 가정
     * num1에 따라 1이면 1칸전진, 2이면 2칸 전진, 3이면 3칸 전진 출력
     * 나머지는 이상한 값
     */
    
    System.out.println("---------------------------------");
    
    int num1 = (int) (Math.random() * 4) + 1;
    
    switch(num1) {
      case 0 : System.out.println("1칸 전진"); break;
      case 1 : System.out.println("2칸 전진"); break;
      case 2 : System.out.println("3칸 전진"); break;
      default : System.out.println("잘못된 값");
    }

  }

}
