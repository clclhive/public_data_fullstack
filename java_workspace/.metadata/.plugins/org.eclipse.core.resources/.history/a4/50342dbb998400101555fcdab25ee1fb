package day04;

public class StringEx02 {

  public static void main(String[] args) {
    /* fileName.suffix
     * 파일명과 확장자를 분리하여 출력
     * 확장자가 "java'라면 자바파일입니다. / 기타파일입니다.
     */
    
    String file = "자바의정석.java";
    
    /*.을 기준으로 앞은 파일명 뒤는 확장자
     * 
     */
    
    int dot = file.indexOf(".");
    
    String fName = file.substring(0,dot);
    String fEx = file.substring(dot+1);
    
    System.out.println("파일명 :" + fName);
    System.out.println("확장자명 : " + fEx);
    
    if (fEx.equals("java")) {
      System.out.println("자바");
    }   else {
      System.out.println("기타");
    }
    


}
}