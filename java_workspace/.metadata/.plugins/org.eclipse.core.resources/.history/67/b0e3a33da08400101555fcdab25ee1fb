package day04;

public class Array01 {

  public static void main(String[] args) {
    /* 배열 : 같은 타입, 같은 의미를 가지는 변수의 집함(참조변수)
     * new 키워드로 생성
     * 배열 선언 방법
     * 타입[] 배열명 = new 타입[길이];
     * 타입[] 배열명 == 타입 배열명[]
     * 
     * int[] String[] double[]
     * 배열안의 변수값은 초기화가 자동으로 이루어진다.
     * int[] arr = new int[]{1,2,3,4,5,6};
     * int[] arr = {2,3,4,5};
     * 
     * 배열의 길이는 0이상이여야한다.(- 허용 안됨)
     * 배열은 index 0부터
     * 배열[5] => 0,1,2,3,4
     * 배열의 총길이 => length
     */
    
    int[] arr1; // null 선언만
    int[] arr = new int[5];
    int[] arr2 = new int[] {1,2,3,4,5};
    int[] arr3 = {10,20,30};
    
    arr[0]=100;
    arr[1]=200;
    arr[2]=300;
    arr[3]=400;
    arr[4]=500; //하나씩 넣으면 불편함
    
    System.out.println("---------------------");
    
    int[] arr5 = new int[10];
    for(int i = 0 ; i <arr5.length ; i++) {
      arr5[i] = i+1;
    }
    //출력
    for(int a : arr5) {
      System.out.println(a);
    }
    
    

  }

}
