package day03;

import java.util.Scanner;

public class Exam02 {

  public static void main(String[] args) {
    /*
     * up/down 게임 1~50 까지의 랜덤 수 하나를 생성 유저가 맞추는 게임 컴퓨터가 랜덤 수를 생성하고, 유저가 맞춤(숫자는 알려주지 않음) 입력한 값이 생성한
     * 수보다 작으면 up 높으면 down
     * 
     * 랜덤 숫자 받기 내가 숫자를 입력하는 란 기입 해당 숫자는 정답을 맞출 때까지 반복하는 프롬프트 계속 생성
     * 
     */

    int randomNumber = (int) (Math.random() * 50) + 1;

    Scanner sc = new Scanner(System.in);
    int ug;
    int result;

    System.out.println("게임 start");
    System.out.println("1~50까지의 숫자 중 하나 고르세요");

    for (;;) {
      System.out.println("숫자 입력 :");
      ug = sc.nextInt();

      result = ug - randomNumber;

      if (result < 0) {
        System.out.println("더 큰 숫자임");
      } else if (result > 0) {
        System.out.println("더 작은 숫자임");
      } else {
        System.out.println("정답임");
        break;
      }
    }
    
    sc.close();

  }

}
