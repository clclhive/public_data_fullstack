package day03;

import java.util.Scanner;

public class Exam03 {

  public static void main(String[] args) {
    /*
     * ---menu--- 1. + 2. - 3. * 4. / 5. % 6. 종료 1번 선택 시 두 수를 입력해주세요 > 3,4 입력 시 3+4=7 출력 2번 > 3,2 입력
     * 시 3-2=1 ... 4번 > 만약 3 0 같이 받으면 피연산자가 0일 순 없습니다 다시 입력하세요 5번 > 4번과 마찬가지의 기능 6번 > 종료
     */

    Scanner sc = new Scanner(System.in);
    int menu = 0;

    do {
      System.out.println("1. +");
      System.out.println("2. -");
      System.out.println("3. *");
      System.out.println("4. /");
      System.out.println("5. %");
      System.out.println("6. 종료");
      System.out.println("메뉴 선택하시오");

      menu = sc.nextInt();

      if (menu >= 1 && menu <= 5) {
        System.out.println("두 수 입력하세요");
        if (menu >= 1 && menu <= 3) {
          int num1 = sc.nextInt();
          int num2 = sc.nextInt();

          switch (menu) {
            case 1:
              System.out.println(num1 + "+" + num2 + "=" + (num1 + num2));
              break;
            case 2:
              System.out.println(num1 + "-" + num2 + "=" + (num1 - num2));
              break;
            case 3:
              System.out.println(num1 + "*" + num2 + "=" + (num1 * num2));
              break;
          }
        }   else {
          double num1 = sc.nextDouble();
          double num2 = sc.nextDouble();
          
          switch(menu) {
            case 4:
              if(num2 == 0) {
                System.out.println("피연산자는 0이 될 수 없음");                
              } else {
                System.out.println(num1 + "/" + num2 + "=" + (num1 / num2));
              }
              break;
            case 5 :
              if(num2 == 0) {
                System.out.println("피연산자는 0이 될 수 없음");
              } else {
                System.out.println(num1 + "%" + num2 + "=" + (num1 % num2));
              }
          }
        }


      } else if (menu == 6) {
        System.out.println("종료");
      } else {
        System.out.println("잘못된 메뉴");
      }
    } while (menu != 6);

    sc.close();

  }

}
